{
  "root": true,
  "extends": ["next/core-web-vitals", "plugin:jsx-a11y/recommended", "plugin:import/recommended"],
  "plugins": ["jsx-a11y", "import"],
  "parserOptions": {
    "project": ["./tsconfig.json"]
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "./tsconfig.json"
      },
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "import/no-unresolved": "off"
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "extends": ["plugin:import/typescript"]
    }
  ]
}
